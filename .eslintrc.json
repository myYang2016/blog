{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:sonarjs/recommended"],
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": ["sonarjs"],
    "rules": {
        "linebreak-style": [
            "off",
            "windows"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": 2,
        "object-curly-newline":2,
        "brace-style": 2,
        "indent":["warn", 2],
        "no-undef": 1,
        "no-unused-vars": 1,
        "no-console": "off",
        "require-atomic-updates":0,
        "max-len": ["error", { "code": 100 }],
        "sonarjs/no-redundant-jump": "off"
    },
    "globals":{
      "process":true,
      "describe":true,
      "it":true,
      "Buffer":true,
      "__dirname":true
    }
}
